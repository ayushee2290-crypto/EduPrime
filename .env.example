# ===========================================
# EduPrime - Environment Configuration
# ===========================================
# Copy this file to .env and update values

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eduprime
DB_USER=eduprime_user
DB_PASSWORD=your_secure_password_here

# -------------------------------------------
# Server Configuration
# -------------------------------------------
PORT=3000
NODE_ENV=development
# Options: development, production, test

# -------------------------------------------
# Authentication
# -------------------------------------------
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -------------------------------------------
# WhatsApp Business API
# -------------------------------------------
# Get these from Meta Business Suite
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_ID=your_whatsapp_phone_id
WHATSAPP_TOKEN=your_whatsapp_access_token

# -------------------------------------------
# Twilio SMS Configuration
# -------------------------------------------
# Get these from Twilio Console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE=+1234567890

# -------------------------------------------
# Email (SMTP) Configuration
# -------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=EduPrime Institute <noreply@eduprime.institute>

# -------------------------------------------
# Razorpay Payment Gateway
# -------------------------------------------
# Get these from Razorpay Dashboard
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# -------------------------------------------
# n8n Workflow Automation
# -------------------------------------------
N8N_USER=admin
N8N_PASSWORD=change_me
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# -------------------------------------------
# Institute Configuration
# -------------------------------------------
INSTITUTE_NAME=EduPrime Coaching Institute
INSTITUTE_ADDRESS=123 Education Street, Knowledge City
INSTITUTE_PHONE=+91-9876543210
INSTITUTE_EMAIL=info@eduprime.institute
INSTITUTE_WEBSITE=https://www.eduprime.institute

# -------------------------------------------
# Fee Configuration
# -------------------------------------------
# Reminder days before due date
FEE_REMINDER_DAYS=7,3,1,0,-1,-3,-7
# Grace period in days
FEE_GRACE_PERIOD=7
# Late fee percentage
LATE_FEE_PERCENTAGE=2

# -------------------------------------------
# Attendance Configuration
# -------------------------------------------
# Minimum attendance percentage required
MIN_ATTENDANCE_PERCENTAGE=75
# Alert threshold for consecutive absences
CONSECUTIVE_ABSENCE_ALERT=3

# -------------------------------------------
# Academic Year Configuration
# -------------------------------------------
ACADEMIC_YEAR_START=2026-04-01
ACADEMIC_YEAR_END=2027-03-31
CURRENT_SESSION=2026-27

# -------------------------------------------
# File Upload Configuration
# -------------------------------------------
MAX_FILE_SIZE=10485760
# 10MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# -------------------------------------------
# Logging Configuration
# -------------------------------------------
LOG_LEVEL=info
# Options: error, warn, info, debug
LOG_FILE=./logs/eduprime.log

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_WINDOW=15
# Minutes
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:5678
